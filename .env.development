# 應用程式基本配置
NODE_ENV=development
VITE_APP_TITLE=市民卡系統 (開發環境)

# API 配置
VITE_API_URL=http://localhost:3000/api
VITE_API_VERSION=v1
VITE_API_TIMEOUT=15000

# 認證配置
VITE_AUTH_TOKEN_KEY=token
VITE_AUTH_REFRESH_TOKEN_KEY=refreshToken
VITE_AUTH_EXPIRES_IN=86400

# 快取配置
VITE_CACHE_PREFIX=citizen_card_dev_
VITE_CACHE_EXPIRE=86400000

# 上傳檔案配置
VITE_UPLOAD_MAX_SIZE=5242880
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
VITE_UPLOAD_URL=http://localhost:3000/api/upload

# WebSocket 配置
VITE_WS_URL=ws://localhost:3000

# 電影相關配置
VITE_MOVIE_DEFAULT_DURATION=120
VITE_MOVIE_CATEGORIES=動作,冒險,喜劇,劇情,科幻,恐怖
VITE_MOVIE_PRICE_DEFAULT=300
VITE_MOVIE_PRICE_STUDENT=250
VITE_MOVIE_PRICE_SENIOR=200

# 場地相關配置
VITE_VENUE_DEFAULT_CAPACITY=100
VITE_VENUE_MAINTENANCE_INTERVAL=30
VITE_VENUE_CLEANING_TIME=30

# 訂位相關配置
VITE_BOOKING_MAX_SEATS=4
VITE_BOOKING_CANCEL_LIMIT=24
VITE_BOOKING_ADVANCE_DAYS=14
VITE_BOOKING_TIME_SLOT=30

# 市民卡相關配置
VITE_CARD_NUMBER_PREFIX=A
VITE_CARD_NUMBER_LENGTH=10
VITE_CARD_TYPES=一般卡,敬老卡,愛心卡,學生卡
VITE_CARD_VALID_YEARS=5

# 電子錢包配置
VITE_WALLET_MIN_DEPOSIT=100
VITE_WALLET_MAX_DEPOSIT=50000
VITE_WALLET_DAILY_LIMIT=100000
VITE_WALLET_TRANSACTION_FEE=0

# 優惠相關配置
VITE_BENEFIT_MAX_USAGE=10
VITE_BENEFIT_EXPIRE_DAYS=30
VITE_BENEFIT_TYPES=公車優惠,特約商店折扣,政府活動積點,抽獎參與

# 安全配置
VITE_ENABLE_XSS_PROTECTION=true
VITE_ENABLE_CSRF_PROTECTION=true
VITE_PASSWORD_MIN_LENGTH=8
VITE_PASSWORD_REQUIRE_SPECIAL_CHAR=true
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOGIN_LOCKOUT_TIME=300

# 開發工具配置
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK=true
VITE_MOCK_DELAY=300
VITE_ENABLE_API_LOGGING=true

# 效能監控
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=100
VITE_ENABLE_ERROR_TRACKING=true
VITE_ERROR_SAMPLE_RATE=100

# 本地化配置
VITE_DEFAULT_LOCALE=zh-TW
VITE_FALLBACK_LOCALE=en
VITE_SUPPORTED_LOCALES=zh-TW,en

# 通知配置
VITE_NOTIFICATION_MAX_AGE=7
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_SMS_NOTIFICATIONS=true
VITE_NOTIFICATION_TYPES=系統通知,優惠通知,訂單通知

# 系統維護
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE=系統維護中，請稍後再試

# 日誌配置
VITE_LOG_LEVEL=debug
VITE_LOG_TO_CONSOLE=true
VITE_LOG_TO_FILE=false
VITE_LOG_MAX_FILES=30
VITE_LOG_TYPES=系統操作,錯誤,安全事件

# 分頁配置
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100
VITE_PAGE_SIZES=10,20,50,100

# CORS 配置
VITE_ALLOWED_ORIGINS=http://localhost:8080
VITE_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
VITE_ALLOWED_HEADERS=Content-Type,Authorization