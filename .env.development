# 應用程式基本配置
NODE_ENV=development
VUE_APP_TITLE=市民卡系統 (開發環境)

# API 配置
VUE_APP_API_URL=http://localhost:3000/api
VUE_APP_API_VERSION=v1
VUE_APP_API_TIMEOUT=15000

# 認證配置
VUE_APP_AUTH_TOKEN_KEY=token
VUE_APP_AUTH_REFRESH_TOKEN_KEY=refreshToken
VUE_APP_AUTH_EXPIRES_IN=86400 # 24小時

# 快取配置
VUE_APP_CACHE_PREFIX=citizen_card_dev_
VUE_APP_CACHE_EXPIRE=86400000 # 24小時

# 上傳檔案配置
VUE_APP_UPLOAD_MAX_SIZE=5242880 # 5MB
VUE_APP_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
VUE_APP_UPLOAD_URL=http://localhost:3000/api/upload

# WebSocket 配置
VUE_APP_WS_URL=ws://localhost:3000

# 第三方服務配置
VUE_APP_GOOGLE_MAPS_KEY=your_google_maps_api_key
VUE_APP_PAYMENT_GATEWAY_URL=http://localhost:3001/api/payment

# 日誌配置
VUE_APP_LOG_LEVEL=debug
VUE_APP_LOG_TO_CONSOLE=true
VUE_APP_LOG_TO_FILE=false

# 安全配置
VUE_APP_ENABLE_XSS_PROTECTION=true
VUE_APP_ENABLE_CSRF_PROTECTION=true
VUE_APP_ALLOWED_ORIGINS=http://localhost:8080

# 功能開關
VUE_APP_FEATURE_NOTIFICATIONS=true
VUE_APP_FEATURE_CHAT=true
VUE_APP_FEATURE_REVIEWS=true

# 分頁配置
VUE_APP_DEFAULT_PAGE_SIZE=10
VUE_APP_MAX_PAGE_SIZE=100

# 效能監控
VUE_APP_ENABLE_PERFORMANCE_MONITORING=true
VUE_APP_PERFORMANCE_SAMPLE_RATE=100

# 錯誤追蹤
VUE_APP_ENABLE_ERROR_TRACKING=true
VUE_APP_ERROR_SAMPLE_RATE=100

# 本地化配置
VUE_APP_DEFAULT_LOCALE=zh-TW
VUE_APP_FALLBACK_LOCALE=en
VUE_APP_SUPPORTED_LOCALES=zh-TW,en

# PWA 配置
VUE_APP_ENABLE_PWA=true
VUE_APP_PWA_NAME=市民卡系統
VUE_APP_PWA_SHORT_NAME=市民卡
VUE_APP_PWA_THEME_COLOR=#0d6efd
VUE_APP_PWA_BACKGROUND_COLOR=#ffffff

# 開發工具配置
VUE_APP_ENABLE_DEVTOOLS=true
VUE_APP_ENABLE_DEBUG=true
VUE_APP_ENABLE_MOCK=true
VUE_APP_MOCK_DELAY=300

# 電子錢包配置
VUE_APP_WALLET_MIN_DEPOSIT=100
VUE_APP_WALLET_MAX_DEPOSIT=50000
VUE_APP_WALLET_DAILY_LIMIT=100000

# 訂位配置
VUE_APP_BOOKING_MAX_SEATS=4
VUE_APP_BOOKING_CANCEL_LIMIT=24 # 小時

# 優惠配置
VUE_APP_BENEFIT_MAX_USAGE=10
VUE_APP_BENEFIT_EXPIRE_DAYS=30

# 市民卡配置
VUE_APP_CARD_NUMBER_PREFIX=A
VUE_APP_CARD_NUMBER_LENGTH=10

# 系統維護
VUE_APP_MAINTENANCE_MODE=false
VUE_APP_MAINTENANCE_MESSAGE=系統維護中，請稍後再試

# 備援配置
VUE_APP_BACKUP_API_URL=http://backup-api.localhost:3000
VUE_APP_ENABLE_FALLBACK=true

# 效能優化
VUE_APP_ENABLE_COMPRESSION=true
VUE_APP_ENABLE_CACHING=true
VUE_APP_CACHE_MAX_AGE=3600

# 安全性設定
VUE_APP_PASSWORD_MIN_LENGTH=8
VUE_APP_PASSWORD_REQUIRE_SPECIAL_CHAR=true
VUE_APP_MAX_LOGIN_ATTEMPTS=5
VUE_APP_LOGIN_LOCKOUT_TIME=300 # 秒

# 通知設定
VUE_APP_NOTIFICATION_MAX_AGE=7 # 天
VUE_APP_ENABLE_EMAIL_NOTIFICATIONS=true
VUE_APP_ENABLE_SMS_NOTIFICATIONS=true

# 開發者選項
VUE_APP_SHOW_DEVELOPMENT_WARNING=true
VUE_APP_ENABLE_API_LOGGING=true
VUE_APP_ENABLE_PERFORMANCE_HINTS=true