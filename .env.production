# 環境標識


# API 配置
VITE_API_URL=https://api.citizencard.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=15000

# 認證配置
VITE_AUTH_TOKEN_KEY=token
VITE_AUTH_REFRESH_TOKEN_KEY=refreshToken
VITE_AUTH_EXPIRES_IN=86400

# 快取配置
VITE_CACHE_PREFIX=citizen_card_
VITE_CACHE_EXPIRE=86400000

# 上傳配置
VITE_UPLOAD_URL=https://upload.citizencard.com
VITE_UPLOAD_MAX_SIZE=5242880
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# 支付配置
VITE_PAYMENT_GATEWAY=https://pay.citizencard.com
VITE_PAYMENT_MERCHANT_ID=merchant_123456
VITE_PAYMENT_KEY=production_key_xxxxx

# WebSocket 配置
VITE_WS_URL=wss://ws.citizencard.com
VITE_WS_RECONNECT=true
VITE_WS_RECONNECT_ATTEMPTS=5

# 日誌配置
VITE_LOG_LEVEL=error
VITE_LOG_API=https://log.citizencard.com
VITE_ERROR_REPORTING=true

# 效能配置
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHE=true
VITE_CACHE_MAX_AGE=2592000

# CDN 配置
VITE_CDN_URL=https://cdn.citizencard.com
VITE_ASSETS_VERSION=1.0.0

# 安全配置
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_XSS_PROTECTION=true
VITE_ENABLE_FRAME_PROTECTION=true

# reCAPTCHA 配置
VITE_RECAPTCHA_SITE_KEY=production_site_key_xxxxx

# Google Analytics 配置
VITE_GA_ID=UA-XXXXXXXXX-X

# 系統配置
VITE_APP_TITLE=市民卡系統
VITE_APP_DESCRIPTION=便捷的市民服務平台
VITE_APP_KEYWORDS=市民卡,電子票券,優惠管理
VITE_APP_AUTHOR=市民卡團隊

# 分頁配置
VITE_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# 限制配置
VITE_RATE_LIMIT=100
VITE_MAX_FILE_SIZE=5242880
VITE_MAX_UPLOAD_FILES=10

# 時區配置
VITE_TIMEZONE=Asia/Taipei
VITE_DATE_FORMAT=YYYY-MM-DD
VITE_TIME_FORMAT=HH:mm:ss

# 語言配置
VITE_DEFAULT_LOCALE=zh-TW
VITE_FALLBACK_LOCALE=en
VITE_SUPPORTED_LOCALES=zh-TW,en

# 維護模式
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE=系統維護中，請稍後再試。

# 版本資訊
VITE_VERSION=1.0.0
VITE_BUILD_TIME=2024-10-25
VITE_GIT_HASH=abc123def456

# 客服配置
VITE_SUPPORT_EMAIL=support@citizencard.com
VITE_SUPPORT_PHONE=0800-123-456
VITE_SUPPORT_HOURS=週一至週五 09:00-18:00

# 社群媒體
VITE_FACEBOOK_URL=https://facebook.com/citizencard
VITE_LINE_URL=https://line.me/citizencard
VITE_INSTAGRAM_URL=https://instagram.com/citizencard

# 其他配置
VITE_ENABLE_PWA=true
VITE_ENABLE_SSR=false
VITE_ENABLE_HTTPS=true
VITE_ENABLE_HTTP2=true