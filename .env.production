# 環境標識
NODE_ENV=production

# API 配置
VUE_APP_API_URL=https://api.citizencard.com
VUE_APP_API_VERSION=v1
VUE_APP_API_TIMEOUT=15000

# 認證配置
VUE_APP_AUTH_TOKEN_KEY=token
VUE_APP_AUTH_REFRESH_TOKEN_KEY=refreshToken
VUE_APP_AUTH_EXPIRES_IN=86400

# 快取配置
VUE_APP_CACHE_PREFIX=citizen_card_
VUE_APP_CACHE_EXPIRE=86400000

# 上傳配置
VUE_APP_UPLOAD_URL=https://upload.citizencard.com
VUE_APP_UPLOAD_MAX_SIZE=5242880
VUE_APP_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# 支付配置
VUE_APP_PAYMENT_GATEWAY=https://pay.citizencard.com
VUE_APP_PAYMENT_MERCHANT_ID=merchant_123456
VUE_APP_PAYMENT_KEY=production_key_xxxxx

# WebSocket 配置
VUE_APP_WS_URL=wss://ws.citizencard.com
VUE_APP_WS_RECONNECT=true
VUE_APP_WS_RECONNECT_ATTEMPTS=5

# 日誌配置
VUE_APP_LOG_LEVEL=error
VUE_APP_LOG_API=https://log.citizencard.com
VUE_APP_ERROR_REPORTING=true

# 效能配置
VUE_APP_ENABLE_COMPRESSION=true
VUE_APP_ENABLE_CACHE=true
VUE_APP_CACHE_MAX_AGE=2592000

# CDN 配置
VUE_APP_CDN_URL=https://cdn.citizencard.com
VUE_APP_ASSETS_VERSION=1.0.0

# 安全配置
VUE_APP_ENABLE_CSP=true
VUE_APP_ENABLE_HSTS=true
VUE_APP_ENABLE_XSS_PROTECTION=true
VUE_APP_ENABLE_FRAME_PROTECTION=true

# reCAPTCHA 配置
VUE_APP_RECAPTCHA_SITE_KEY=production_site_key_xxxxx
VUE_APP_RECAPTCHA_SECRET_KEY=production_secret_key_xxxxx

# Google Analytics 配置
VUE_APP_GA_ID=UA-XXXXXXXXX-X

# 系統配置
VUE_APP_TITLE=市民卡系統
VUE_APP_DESCRIPTION=便捷的市民服務平台
VUE_APP_KEYWORDS=市民卡,電子票券,優惠管理
VUE_APP_AUTHOR=市民卡團隊

# 分頁配置
VUE_APP_PAGE_SIZE=10
VUE_APP_MAX_PAGE_SIZE=100

# 限制配置
VUE_APP_RATE_LIMIT=100
VUE_APP_MAX_FILE_SIZE=5242880
VUE_APP_MAX_UPLOAD_FILES=10

# 時區配置
VUE_APP_TIMEZONE=Asia/Taipei
VUE_APP_DATE_FORMAT=YYYY-MM-DD
VUE_APP_TIME_FORMAT=HH:mm:ss

# 語言配置
VUE_APP_DEFAULT_LOCALE=zh-TW
VUE_APP_FALLBACK_LOCALE=en
VUE_APP_SUPPORTED_LOCALES=zh-TW,en

# 維護模式
VUE_APP_MAINTENANCE_MODE=false
VUE_APP_MAINTENANCE_MESSAGE=系統維護中，請稍後再試。

# 版本資訊
VUE_APP_VERSION=1.0.0
VUE_APP_BUILD_TIME=2024-10-25
VUE_APP_GIT_HASH=abc123def456

# 客服配置
VUE_APP_SUPPORT_EMAIL=support@citizencard.com
VUE_APP_SUPPORT_PHONE=0800-123-456
VUE_APP_SUPPORT_HOURS=週一至週五 09:00-18:00

# 社群媒體
VUE_APP_FACEBOOK_URL=https://facebook.com/citizencard
VUE_APP_LINE_URL=https://line.me/citizencard
VUE_APP_INSTAGRAM_URL=https://instagram.com/citizencard

# 其他配置
VUE_APP_ENABLE_PWA=true
VUE_APP_ENABLE_SSR=false
VUE_APP_ENABLE_HTTPS=true
VUE_APP_ENABLE_HTTP2=true