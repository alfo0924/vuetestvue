# 應用程式設定
APP_NAME=市民卡系統
APP_ENV=development # development, production, testing
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_PORT=8080

# API 設定
VUE_APP_API_URL=http://localhost:3000/api
VUE_APP_API_VERSION=v1
VUE_APP_API_TIMEOUT=15000

# 資料庫設定
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=citizen_card_db
DB_USERNAME=root
DB_PASSWORD=password

# Redis 設定
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# JWT 設定
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 郵件設定
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# 檔案上傳設定
UPLOAD_MAX_SIZE=5242880 # 5MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf
UPLOAD_PATH=uploads

# 第三方服務設定
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:8080/auth/facebook/callback

# LINE Pay
LINE_PAY_CHANNEL_ID=your-line-pay-channel-id
LINE_PAY_CHANNEL_SECRET=your-line-pay-channel-secret
LINE_PAY_RETURN_URL=http://localhost:8080/payment/line-pay/callback

# SMS 服務
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=your-twilio-phone-number

# 快取設定
CACHE_DRIVER=redis
CACHE_PREFIX=citizen_card_
CACHE_TTL=86400 # 24小時

# 日誌設定
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_MAX_FILES=30

# 安全性設定
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1
SPA_URL=http://localhost:8080

# 跨域設定
CORS_ALLOWED_ORIGINS=http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_MAX_AGE=86400

# 維護模式設定
MAINTENANCE_MODE=false
MAINTENANCE_TOKEN=your-maintenance-token

# 效能監控設定
PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLING_RATE=0.1

# 系統限制設定
RATE_LIMIT=60 # 每分鐘請求次數
MAX_LOGIN_ATTEMPTS=5 # 最大登入嘗試次數
PASSWORD_TIMEOUT=60 # 密碼重置超時（分鐘）

# 推播通知設定
PUSH_NOTIFICATION_ENABLED=true
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket
FIREBASE_MESSAGING_SENDER_ID=your-firebase-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_MEASUREMENT_ID=your-firebase-measurement-id

# 其他自定義設定
DEFAULT_LANGUAGE=zh-TW
DEFAULT_TIMEZONE=Asia/Taipei
DEFAULT_CURRENCY=TWD